{% for product in products %}
    <div class="col mb-4">
        <div class="card" style="width: 25rem;">
            <img src="https://picsum.photos/300/300" class="card-img-top" alt="...">
            <div class="card-body">
                <div class="card-content">
                <h5 class="card-title text-center pb-2">{{ product.title }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">Catégorie</h6>
                <p class="card-text">{{ product.description | u.truncate(60, '...', false)}}</p>
                </div>
                <a href="#" class="btn btn-primary">voir le produit</a>
            </div>
            <div class="card-footer text-muted">
                <p>prix: {{ product.price }} €</p>
                <p>poid: {{ product.pound }} Grammes</p>
            </div>
        </div>
    </div>
{% endfor %}
