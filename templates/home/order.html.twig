{% extends 'base.html.twig' %}

{% block title %}Passer commande{% endblock %}

{% block body %}

    <div class="container my-5" style="overflow: auto; height: 75vh">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Miniature</th>
                <th scope="col">Produit</th>
                <th scope="col">Stock</th>
                <th scope="col">Poids</th>
                <th scope="col">Prix</th>
                <th scope="col">Quantité</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <th scope="row">
                        <img src="{{ (product.imageName ? vich_uploader_asset(product) : asset('uploads/images/Not-found.png')) | imagine_filter('squared_thumbnail_small') }} "/>
                    </th>
                    <td>
                        {{ product.title }}
                    </td>
                    <td>
                        {{ product.quantity }}
                    </td>
                    <td>
                        {{ pluralize(product.pound , product.units) }}
                    </td>
                    <td>
                        {{ product.price }} €
                    </td>
                    <td>
                        <input type="number" value="0">
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                {{ form_row(form.first_name) }}
            </div>
            <div class="col">
                {{ form_row(form.last_name) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.phone) }}
            </div>
            <div class="col">
                {{ form_row(form.address) }}
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Commander</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}