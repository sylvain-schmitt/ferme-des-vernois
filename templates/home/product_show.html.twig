{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="text-center my-4">{{ product.title }}</h2>
    <img src="{{ (product.imageName ? vich_uploader_asset(product) : asset('uploads/images/Not-found.png')) | imagine_filter('squared_thumbnail_large') }} "/>
    <div class="row">
        <div class="col">
            {% if product.bio == true %}
                <img src="{{ asset('uploads/images/logo-bio.png') }}" alt="logo agriculture bio" style="width: 50px">
            {% endif %}
        </div>
        <div class="col">
            {% if product.beef == true %}
                <img src="{{ asset('uploads/images/logo-boeuf.png') }}" alt="logo boeuf certififiÃ©"style="width: 50px">
            {% endif %}
        </div>
        <div class="col">
            {% if product.logo == true %}
                <img src="{{ asset('uploads/images/cereal-logo.png') }}" alt="logo cereal "style="width: 50px">
            {% endif %}
        </div>
    </div>
    <p>{{ product.description | raw}}</p>
    {% if product.quantity == 0 %}
        <span>Produit insdisponible</span>
    {% elseif app.session.get('panier')[product.id] is not defined %}
        <a href="{{ path('app_cart_add_product', {id: product.id}) }}" class="js-addcart"><span class="js-disable"><img src="{{ asset('build/images/btn_commander.png') }}" alt="Comander" class="contact"></span></a>
    {% else %}
        <a href="{{ path('app_cart') }}" class="btn btn-primary">Voir le Panier</a>
    {% endif %}
{#
    <a href="{{ path('app_cart_add_product', {id: product.id}) }}"><img src="{{ asset('build/images/btn_commander.png') }}" alt="Comander" class="btn-perso"></a>
#}
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="{{ asset('js/addcart.js') }}"></script>
{% endblock %}

{% block title %}
    {{ product.title }}
{% endblock %}

